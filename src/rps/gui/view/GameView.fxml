<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="620.0" prefWidth="780.0" styleClass="root-pane" stylesheets="@retro.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rps.gui.controller.GameViewController">

    <VBox spacing="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <!-- HEADER -->
        <HBox alignment="CENTER" styleClass="header">
            <Label styleClass="title-label" text="✊ ✋ ✌  ROCK · PAPER · SCISSORS  ✌ ✋ ✊" />
        </HBox>

        <!-- SCORE BAR -->
        <HBox alignment="CENTER" spacing="60" styleClass="score-bar">
            <VBox alignment="CENTER" spacing="4">
                <Label styleClass="score-name" text="PLAYER" />
                <Label fx:id="lblPlayerScore" styleClass="score-value" text="0" />
            </VBox>
            <VBox alignment="CENTER" spacing="4">
                <Label styleClass="score-name" stylesheets="@retro.css" text="TIES" />
                <Label fx:id="lblTieScore" styleClass="score-value-tie" text="0" />
            </VBox>
            <VBox alignment="CENTER" spacing="4">
                <Label styleClass="score-name" text="BOT" />
                <Label fx:id="lblBotScore" styleClass="score-value-bot" text="0" />
            </VBox>
        </HBox>

        <!-- ARENA -->
        <HBox alignment="CENTER" spacing="0" styleClass="arena" HBox.hgrow="ALWAYS">

            <!-- Player side -->
            <VBox alignment="CENTER" spacing="14" styleClass="player-panel" HBox.hgrow="ALWAYS">
                <Label styleClass="panel-title" text="— YOU —" />
                <Label fx:id="lblPlayerMove" styleClass="move-display player-move" text="?" />
                <Label fx:id="lblPlayerMoveText" styleClass="move-text" text="waiting..." />
            </VBox>

            <!-- VS divider -->
            <VBox alignment="CENTER" styleClass="vs-divider">
                <Label styleClass="vs-label" text="VS" />
                <Label fx:id="lblResult" maxWidth="100" styleClass="result-label" text="···" wrapText="true" />
            </VBox>

            <!-- Bot side -->
            <VBox alignment="CENTER" spacing="14" styleClass="player-panel bot-panel" HBox.hgrow="ALWAYS">
                <Label styleClass="panel-title" text="— BOT —" />
                <Label fx:id="lblBotMove" styleClass="move-display bot-move" text="?" />
                <Label fx:id="lblBotMoveText" styleClass="move-text" text="waiting..." />
            </VBox>

        </HBox>

        <!-- MOVE BUTTONS -->
        <HBox alignment="CENTER" spacing="28" styleClass="button-bar">
            <Button fx:id="btnRock" onAction="#onRock" styleClass="move-btn" text="✊  ROCK" />
            <Button fx:id="btnPaper" onAction="#onPaper" styleClass="move-btn" text="✋  PAPER" />
            <Button fx:id="btnScissor" onAction="#onScissor" styleClass="move-btn" text="✌  SCISSOR" />
        </HBox>

        <!-- WIN / LOSS STATS -->
        <HBox alignment="CENTER" spacing="50" styleClass="stats-bar">
            <VBox alignment="CENTER" spacing="2">
                <Label styleClass="stat-label" text="ROUNDS PLAYED" />
                <Label fx:id="lblRounds" styleClass="stat-value" text="0" />
            </VBox>
            <VBox alignment="CENTER" spacing="2">
                <Label styleClass="stat-label" text="WIN RATE" />
                <Label fx:id="lblWinRate" styleClass="stat-value" text="0%" />
            </VBox>
            <VBox alignment="CENTER" spacing="2">
                <Label styleClass="stat-label" text="LONGEST WIN STREAK" />
                <Label fx:id="lblStreak" styleClass="stat-value" text="0" />
            </VBox>
        </HBox>

        <!-- HISTORY TABLE -->
        <VBox styleClass="history-section" VBox.vgrow="ALWAYS">
            <Label styleClass="history-title" text="[ ROUND HISTORY ]" />
            <TableView fx:id="tblHistory" styleClass="history-table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colRound" prefWidth="55" styleClass="col-header" text="RND" />
                    <TableColumn fx:id="colPlayerMove" prefWidth="110" styleClass="col-header" text="YOU" />
                    <TableColumn fx:id="colBotMove" prefWidth="110" styleClass="col-header" text="BOT" />
                    <TableColumn fx:id="colOutcome" prefWidth="130" styleClass="col-header" text="RESULT" />
                </columns>
                <placeholder>
                    <Label styleClass="table-placeholder" text="No rounds played yet." />
                </placeholder>
            </TableView>
        </VBox>

    </VBox>
</AnchorPane>
